generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  salary    Decimal?  @db.Decimal(12, 2)
  expenses  Expense[]
  obligations Obligation[]
  payCycles PayCycle[]
  futureEntries FutureEntry[]
  envelopes SpendingEnvelope[]
  createdAt DateTime  @default(now())
}

model Expense {
  id          Int      @id @default(autoincrement())
  description String
  amount      Decimal  @db.Decimal(10, 2)
  category    String?
  date        DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  payCycle    PayCycle? @relation(fields: [payCycleId], references: [id])
  payCycleId  Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Obligation {
  id        Int      @id @default(autoincrement())
  title     String
  amount    Decimal  @db.Decimal(12, 2)
  category  String?
  dueDay    Int      // dia do mês (1-31)
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  payCycle  PayCycle? @relation(fields: [payCycleId], references: [id])
  payCycleId Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FutureEntry {
  id        Int      @id @default(autoincrement())
  title     String
  amount    Decimal  @db.Decimal(12, 2)
  category  String?
  dueDate   DateTime
  type      String   @default("expense") // expense | income
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SpendingEnvelope {
  id        Int      @id @default(autoincrement())
  title     String
  budget    Decimal  @db.Decimal(12, 2)
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  allocations SpendingAllocation[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SpendingAllocation {
  id        Int      @id @default(autoincrement())
  envelope  SpendingEnvelope @relation(fields: [envelopeId], references: [id])
  envelopeId Int
  title     String
  amount    Decimal @db.Decimal(12, 2)
  date      DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PayCycle {
  id        Int      @id @default(autoincrement())
  name      String
  payDay    Int      // dia do mês
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  expenses  Expense[]
  obligations Obligation[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
